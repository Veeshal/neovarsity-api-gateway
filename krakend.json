{
  "version": 3,
  "name": "api-gateway",
  "port": 8080,
  "endpoints": [
    {
      "endpoint": "/user-service/{rest:.+}",
      "method": "GET",
      "backend": [
        {
          "host": [
            "https://user-service-mh3m.onrender.com"
          ],
          "extra_config": {
            "proxy": {
              "rewrite": "/{rest}"
            }
          }
        }
      ]
    },
    {
      "endpoint": "/product-service/{rest:.+}",
      "method": "GET",
      "backend": [
        {
          "host": [
            "https://user-service-mh3m.onrender.com"
          ],
          "extra_config": {
            "proxy": {
              "rewrite": "/{rest}"
            }
          }
        }
      ]
    }
  ]
}
